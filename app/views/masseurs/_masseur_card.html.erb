<div class="card" id="masseur_card" >
  <div class="card-body">
    <div class="d-flex align-items-center">
      <%#= link_to (masseur_path(masseur.id)), class: "text-dark"do %>
        <%= cl_image_tag "#{masseur.avatar}",crop: :fill, height: 100, width: 100, class: "avatar-large" %>
      <%#=end %>
      <div>
        <h5 class="card-title"><%= masseur.first_name %> <%= masseur.last_name %></h5>
        <% unless masseur.massages.empty? %>
          <ul class="massage_list">
          <% masseur.massages.each do |massage| %>
            <li><%= massage.massage_type %></li>
          <% end %>
          </ul>
        <% end %>
      </div>
    </div>
    <p class="card-text"><%= masseur.description %></p>
    <div class="d-flex justify-content-between">
      <p>Ville: <%= masseur.city %></p>
      <% average = masseur.reviews.sum(&:rating) / masseur.reviews.size.to_f %>
      <p>
         Note :
        <% average.round.times do %> <i class="fa fa-star gold text-primary"></i>
        <% end %>
        <% (5 - average).round(half: :down).times do %> <i class="far fa-star gold text-primary"></i>
        <% end %>
      </p>
    </div>
  </div>
</div>
