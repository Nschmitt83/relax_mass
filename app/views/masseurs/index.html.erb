<div class="container">
  <div class="row justify-content-center">
    <h1 style="margin: 30px">LES MASSO-THERAPEUTES <%= @title_inject %></h1>
      <div class="col-12 cd-lg-10 masseurs_container">
        <div class="filtres">
          <h2>Filtrez moi !</h2>
          <div class="accordion" id="accordionExample">
            <h3 id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fas fa-arrow-right"></i> Date
            </h3>
            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
              <%#= f.input :start_date, label: false,  as: :string, required: false, input_html: {id: "datepicker",class: "d-none"} %>
              <p class="calendar">
                Ici se situera un "FAT" calendrier
              </p>
            </div>
          </div> <!-- FIN DIV ACCORDION -->

            <h3>Type de massage</h3>
            <%= simple_form_for @user, url: masseurs_path, method: :get do |f|%>
            <%= f.input :first_name, label: false, collection: MASSAGE_PRICE_AND_TYPE.keys, class: "mb-0" %>
            <h3>Ma ville</h3>
            <%= f.input :city, label: false %>
            <h3>Genre</h3>
            <%= f.input :gender, label: "", as: :radio_buttons, collection: User::GENRE %>

              <h3>Notes supérieures à</h3>
              <%= f.input :last_name, as: :radio_buttons, label: "", collection: Review::RATING, wrapper: :vertical_collection_inline %>


              <%= f.submit "GO !", class: "btn btn-info" %>
            <% end %>
        </div>
        <div class="index_cards_masseurs">
          <% @masseurs.each do |masseur| %>
            <%= render 'masseur_card', masseur: masseur %>
          <% end %>
        </div>
      </div>
  </div>
</div>
