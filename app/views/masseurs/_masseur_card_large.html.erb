<div class="card large my-3">
  <div class="card-body d-flex flex-column justify-content-between align-items-center flex-md-row align-items-md-end">
    <%= cl_image_tag "#{user.avatar}", crop: :fill, height: 100, width: 100, class: "avatar-large m-3" %>
    <div class="flex-grow-1">
      <h2 class="card-title text-primary"><%= user.first_name %> <%= user.last_name %></h2>
      <div class="d-flex align-items-stretch">
        <ul class="card-text massage_list mr-2">
          <li><strong>Ville: </strong></li>
          <li><strong>Email: </strong></li>
          <li><strong>SIRET: </strong></li>
        </ul>
        <ul class="card-text massage_list">
          <li> <%= user.ZIP_code %> <%= user.city %></li>
          <li> <%= user.email %></li>
          <li>  <%= user.siret %></li>
        </ul>
      </div>
    </div>
    <p class="mr-3">
      <% unless user.rating.nan? %>
        <strong><em>Note Moyenne : <%= user.rating.round(1) %> /5</em></strong>
      <% end %>
    </p>
  </div>
</div>
